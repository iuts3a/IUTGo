<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="IUTGo.Controllers.CreateItineraireController">
   <children>
      <Button fx:id="button_valider" alignment="CENTER" contentDisplay="CENTER" layoutX="368.0" layoutY="482.0" mnemonicParsing="false" onAction="#validateData" text="Valider" textAlignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
         </padding>
      </Button>
      <ImageView fitHeight="130.0" fitWidth="200.0" layoutX="312.0" layoutY="57.0" onMouseClicked="#homepage">
         <image>
            <Image url="@img/iutGo.png" />
         </image>
      </ImageView>
      <Button fx:id="btn_back" layoutX="32.0" layoutY="36.0" mnemonicParsing="false" onAction="#toBack" text="Retour" />
      <VBox layoutX="134.0" layoutY="278.0" prefHeight="200.0" prefWidth="137.0">
         <children>
            <Label alignment="CENTER" text="Nom du road trip : ">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label text="Description : ">
               <VBox.margin>
                  <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <Label text="Point de départ : ">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <VBox layoutX="322.0" layoutY="278.0" prefHeight="200.0" prefWidth="243.0">
         <children>
            <TextField fx:id="textfield_nom">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextArea fx:id="textarea_description" prefHeight="40.0" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextArea>
            <TextField fx:id="textfield_depart">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <VBox layoutX="584.0" layoutY="284.0" prefHeight="150.0" prefWidth="200.0">
         <children>
            <Label fx:id="feedback_nom" text="Nom déja existant" textFill="RED">
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="feedback_description" text="Veuillez entrer une description" textFill="RED">
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="feedback_start" text="Veuillez indiquer un point de départ" textFill="RED">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
